<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/stepsbg">

            <TextView
                android:id="@+id/headline_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16px"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="Today:"
                android:textAlignment="center"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/steps_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16px"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:text=""
                android:textAlignment="center"
                android:layout_below="@+id/headline_textView"
                android:layout_alignParentStart="true" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/stepsbg">
        <TextView
            android:id="@+id/headline_textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16px"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="Last 7 days:"
            android:textAlignment="center"
            android:layout_below="@+id/steps_textView"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/steps_textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16px"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:text=""
            android:textAlignment="center"
            android:layout_below="@+id/headline_textView2"
            android:layout_alignParentStart="true" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/stepsbg">

        <TextView
            android:id="@+id/headline_textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:padding="16px"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Lifetime:"
            android:textAlignment="center"
            android:layout_below="@+id/steps_textView2"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/steps_textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:padding="16px"
            android:textSize="20sp"
            android:text=""
            android:textAlignment="center"
            android:layout_below="@+id/headline_textView3"
            android:layout_alignParentStart="true" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>