<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/stepcounter_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16px"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="Steps"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/headline_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16px"
        android:textStyle="bold"
        android:text="Today:"
        android:textAlignment="center"
        android:layout_below="@+id/stepcounter_header"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/steps_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16px"
        android:textSize="90sp"
        android:text="Shake"
        android:textAlignment="center"
        android:layout_below="@+id/headline_textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/headline_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16px"
        android:textStyle="bold"
        android:text="Last 7 days:"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/steps_textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/steps_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16px"
        android:textSize="60sp"
        android:text="Shake Me"
        android:textAlignment="center"
        android:layout_below="@+id/headline_textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/headline_textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16px"
        android:textStyle="bold"
        android:text="Lifetime:"
        android:textAlignment="center"
        android:layout_below="@+id/steps_textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/steps_textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16px"
        android:textSize="50sp"
        android:text="Shake Me More"
        android:textAlignment="center"
        android:layout_below="@+id/headline_textView3"
        android:layout_alignParentStart="true" />
</RelativeLayout>